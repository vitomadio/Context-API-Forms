{
    "name": "context-api-forms",
    "version": "3.0.2",
    "description": "A lightweight Higher Order Component which uses context-api to manage form state",
    "main": "dist/index.js",
    "private": false,
    "keywords": [
        "Form",
        "Context",
        "Api",
        "Forms"
    ],
    "babel": {
        "presets": [
            "@babel/preset-typescript",
            "@babel/preset-react"
        ],
        "plugins": [
            "@babel/plugin-transform-typescript"
        ]
    },
    "author": {
        "name": "Vito Madio <vito.madio01@gmail.com>"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/vitomadio/Context-API-Forms"
    },
    "dependencies": {
        "@types/jest": "26.0.20",
        "@types/node": "14.14.31",
        "@types/react": "17.0.2",
        "@types/react-dom": "17.0.1",
        "react": "^17.0.0",
        "react-dom": "^17.0.0",
        "react-scripts": "3.4.3"
    },
    "peerDependencies": {
        "react": "17.0.0",
        "react-dom": "17.0.0"
    },
    "files": [
        "dist"
    ],
    "devDependencies": {
        "@babel/cli": "7.12.13",
        "@babel/core": "7.12.13",
        "@babel/preset-react": "7.12.13",
        "@babel/preset-typescript": "7.13.0",
        "@testing-library/jest-dom": "5.11.9",
        "@testing-library/react": "11.2.3",
        "@typescript-eslint/eslint-plugin": "^4.21.0",
        "@typescript-eslint/parser": "4.21.0",
        "eslint": "6.6.0",
        "eslint-plugin-react-hooks": "4.2.0",
        "prettier": "2.2.1",
        "typescript": "3.8.3"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "tsc --build",
        "test": "npm run lint && react-scripts test --env=jsdom",
        "eject": "react-scripts eject",
        "publish:npm": "rm -rf dist && mkdir dist && babel src/lib --ignore '**/*.test.js' --extensions '.ts,.tsx' --out-dir dist --copy-files --ignore __tests__,specs.js,test.js,__snapshots__,__mocks__",
        "lint": "eslint . --ext .ts --ext .tsx"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
